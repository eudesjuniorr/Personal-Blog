{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "/src/styles/$1"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "/src/scripts/$1"
    },
    {
      "src": "/components/(.*)",
      "dest": "/src/components/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/pages/$1"
    }
  ]
}
